extends ../base
block content
    form(method="POST" enctype="multipart/form-data")
        .upload
            label(for="avatar")
            input(id="title" type="text" name="title" placeholder="Input title",required,maxlength="20")
            textarea(name="content" cols="30" rows="10" placeholder="input write notice",required,id="notice") 
            input(type="file" id="avatar" name="avatar" accept="image/jpg")
            input(id="submit" type="submit" value="submit")